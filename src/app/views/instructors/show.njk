{% extends 'layout.njk' %}

{% block head %}
    <title>{{instructor.name}} | FIMS</title>
{% endblock %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{instructor.avatar_url}}) no-repeat center center / cover; border-radius: 4px 0 0 4px;"></section>
        <section class="details">
            <h3>Details</h3>
            <div class="item">
                <div>Instructor Name</div>
                <div>{{instructor.name}}</div>
            </div>
            <div class="item">
                <div>Age</div>
                <div>{{instructor.age}}</div>
            </div>
            <div class="item">
                <div>Sex</div>
                <div>{{"Male" if instructor.gender == "M" else "Female"}}</div>
            </div>
            <div class="item">
                <div>Specialty</div>
                <div>
                    {% for service in instructor.services %}
                    <span>{{service}}</span>
                    {% endfor %}
                </div>
            </div>
            <div class="item">
                <div>Trainer Since</div>
                <div>{{instructor.created_at}}</div>
            </div>
            <a href="/instructors/{{instructor.id}}/edit" class="button">Edit</a>
        </section>
    </div>
{% endblock content %}