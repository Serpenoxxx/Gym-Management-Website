{% extends 'layout.njk' %}

{% block head %}
    <title>{{plan.name}} | FIMS</title>
{% endblock %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{plan.avatar_url}}) no-repeat center center / cover; border-radius: 4px 0 0 4px;"></section>
        <section class="details">
            <h3>Details</h3>
            <div class="item">
                <div>Plan Name</div>
                <div>{{plan.name}}</div>
            </div>
            <div class="item">
                <div>duration (month)</div>
                <div>{{plan.duration}}</div>
            </div>
            <div class="item">
                <div>details</div>
                <div>{{plan.details}}</div>
            </div>

            <a href="/plan/{{plan.id}}/edit" class="button">Edit</a>
        </section>
    </div>
{% endblock content %}